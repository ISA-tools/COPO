{
    "$schema": "http://json-schema.org/draft-04/schema",
    "title": "ISA protocol schema",
    "description": "JSON-schema representing a protocol in the ISA model",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "protocolType": {
            "type": "object",
                "$ref": "ontology_annotation_schema.json#"
        },
        "description": {
            "type": "string"
        },
        "uri": {
            "type": "string",
            "format": "uri"
        },
        "version": {
            "type": "string"
        },
        "parameters": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "parameterType": {
                        "$ref": "ontology_annotation_schema.json#"
                    }
                }

            }
        },
        "components": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "componentType": {
                        "$ref": "ontology_annotation_schema.json#"
                    }
                }
            }
        }
    }
}